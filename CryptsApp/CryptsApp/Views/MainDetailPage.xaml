<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CryptsApp.Views.MainDetailPage"
             Title="{Binding name}">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center"> 
            <Label Text="{Binding rank}" />
            <Label Text="{Binding name}" />
            <Label Text="{Binding symbol}"/>
            <Label Text="{Binding price_usd}"/>
            <Label Text="{Binding price_btc}"/>
            <Label Text="{Binding market_cap_usd}"/>
            <Label Text="{Binding available_supply}"/>
            <Label Text="{Binding max_supply}"/>
            <Label Text="{Binding total_supply}"/>
            <Label Text="{Binding max_supply}"/>
            <Label Text="{Binding percent_change_1h}"/>
            <Label Text="{Binding percent_change_24h}"/>
            <Label Text="{Binding percent_change_7d}"/>
            <Label Text="{Binding last_updated}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>